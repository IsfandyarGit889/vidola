
@{
    ViewBag.Title = "updateProfile";
}

@model Vidola_Prototype_2.Models.User

<div id="signup">
    <h3>Create Account</h3>
    <div class="social-sits">
        <div class="facebook-button">
            <a href="#">Connect with Facebook</a>
        </div>
        <div class="chrome-button">
            <a href="#">Connect with Google</a>
        </div>
        <div class="button-bottom">
            <p>Already have an account? <a href="~/Users/signin" class="play-icon popup-with-zoom-anim">Login</a>@*<a href="#small-dialog" class="play-icon popup-with-zoom-anim">Login</a>*@</p>
        </div>
    </div>
    <div class="signup">
        <form method="post" action="~/Users/AddUser">
            <input type="text" name="username" value="@Model.Username" placeholder="Username" required="required" />
            <input type="text" name="email" value="@Model.Email" class="email" placeholder="Email" required="required" title="Enter a valid email" />
            <input type="text" name="password" value="@Model.Hushhush" placeholder="Password" required="required" pattern=".{6,}" title="Minimum 6 characters required" autocomplete="off" />
            <input type="text" name="mobile-number" value="@Model.MobileNumber" class="email" placeholder="Mobile Number" maxlength="11" title="Enter your mobile number" />
            <input type="submit" value="Submit Changes" />
        </form>
    </div>
    <div class="clearfix"> </div>
</div>


