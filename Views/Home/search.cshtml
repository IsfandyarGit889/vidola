
@{
    ViewBag.Title = "Search Results";
}

@model Vidola_Prototype_2.Models.VVideoCommentsUsersViewModel

<div class="show-top-grids">
        <div class="recommended">
            <div class="recommended-grids english-grid">
                <div class="recommended-info">
                    <div class="heading">
                        <h3>International</h3>
                    </div>
                    <div class="heading-right">
                        <a href="#small-dialog8" class="play-icon popup-with-zoom-anim">Subscribe</a>
                    </div>
                    <div class="clearfix"> </div>
                </div>

                @{
                    if (Model.videos.Count == 0)
                    {
                        @Html.Raw("<h1>Search yielded no results...");
                    }
                    else
                    {
                        for (int i = 0; i < Model.videos.Count; i++)
                        {
                            <div class="col-md-2 resent-grid recommended-grid show-video-grid">
                                <div class="resent-grid-img recommended-grid-img">
                                    <a href="~/Home/single?vid=@Model.videos[i].VVideoId"><img src="@Model.videos[i].ImgLink" alt="" /></a>
                                    <div class="time small-time show-time">
                                        <p>@Model.videos[i].DateTime</p>
                                    </div>
                                    <div class="clck show-clock">
                                        <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="resent-grid-info recommended-grid-info">
                                    <h5><a href="~/Home/single?vid=@Model.videos[i].VVideoId" class="title">@Model.videos[i].Title</a></h5>
                                    <p class="author"><a href="#" class="author">@Model.users[i].Username</a></p>
                                    <p class="views">@Model.videos[i].Likes views</p>
                                </div>
                            </div>
                        }
                    }

                }

                <div class="clearfix"> </div>
            </div>
        </div>
    
</div>