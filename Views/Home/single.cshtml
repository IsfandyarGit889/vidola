                            <div class="media">
                                <h5>@Model.users[i].Username</h5>
                                <div class="media-left">
                                    <a href="#">

                                    </a>
                                </div>
                                <div class="media-body">
                                    <p>@Model.comments[i].CommentString</p>
                                    <span>Posted on @Model.comments[i].DateTime</span>
                                </div>
                            </div>
                        }
                        
                    </div>
                </div>
