
@{
    ViewBag.Title = "Admin Home";
}

@model Vidola_Prototype_2.Models.VVideoCommentsUsersViewModel
   
@if (ViewBag.updated == 1)
{
    @Html.Raw("<div class='status' style='padding: 6px 8px; text-align:center; width:100%; font-size:1.4em; background-color:lawngreen; color: white; border-radius: 3px;'>Your entry was updated!</div>");
}
@if (ViewBag.deleted == 1)
{
    @Html.Raw("<div class='status' style='padding: 6px 8px; text-align:center; width:100%; font-size:1.4em; background-color:lawngreen; color: white; border-radius: 3px;'>Your entry was deleted!</div>");
}

<div class="show-top-grids">
    <div class="col-sm-10 show-grid-left main-grids">
        <div class="recommended">
            <div class="recommended-grids english-grid">
                <div class="recommended-info">
                    <div class="heading">
                        <h3>International</h3>
                    </div>
                    <div class="heading-right">
                        <a href="/Admin/UploadNew" class="play-icon popup-with-zoom-anim">Add Video</a>
                    </div>
                    <div class="clearfix"> </div>
                </div>

                @for (int i = 0; i<Model.videos.Count; i++)
                {
                    <div class="col-md-2 resent-grid recommended-grid show-video-grid">
                        <div class="resent-grid-img recommended-grid-img">
                            <a href="~/Home/single?vid=@Model.videos[i].VVideoId"><img src="@Model.videos[i].ImgLink" alt="" /></a>
                            <div class="time small-time show-time">
                                <p>@Model.videos[i].DateTime</p>
                            </div>
                            <div class="clck show-clock">
                                <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                            </div>
                        </div>
                        <div class="resent-grid-info recommended-grid-info">
                            <h5><a href="~/Home/single?vid=@Model.videos[i].VVideoId" class="title">@Model.videos[i].Title</a></h5>
                            <p class="author"><a href="#" class="author">@Model.users[i].Username</a></p>
                            <p class="views">@Model.videos[i].Likes views</p>
                            <table>
                                <tr>
                                    <td style="padding-right:6px">
                                        <div style="padding: 6px 8px; width:1.5cm; font-size:1.2em; background-color:#21DEEF; color: white; border-radius: 3px;"><a style="color:white;" href="~/Admin/Update?vId=@Model.videos[i].VVideoId">Update</a></div>
                                    </td>
                                    <td>
                                        <div style="padding: 6px 8px; width:1.5cm; font-size:1.2em; background-color:red; color: white; border-radius: 3px;"><a style="color:white;" href="~/Admin/DeleteVideo?vId=@Model.videos[i].VVideoId">Delete</a></div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                }

                <div class="clearfix"> </div>
            </div>
        </div>
        
    </div>
    
    <div class="clearfix"> </div>
</div>